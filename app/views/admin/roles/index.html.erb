<div class="container">
  <div class="row">
    <h3>Roles</h3>
      <div class="column">
        <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            <th colspan="3">Action</th>
            <th></th>
            <th></th>

          </tr>
          </thead>
          <tbody>
          <% @admin_roles.each do |admin_role| %>
              <tr>
                <td><%= admin_role.name %></td>
                <td></td>
                <td></td>
                <td></td>
                <td><%= link_to 'Edit', edit_admin_role_path(admin_role), :class => 'button-xs' %></td>
                <td>
                    <%= link_to 'Destroy', admin_role, method: :delete, :data => { :confirm => "Are you sure?" },
                                :class => 'button-xs btn-danger' %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>


